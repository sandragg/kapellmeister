{
  "name": "kapellmeister",
  "version": "1.0.0-beta.0",
  "description": "Transition Manager",
  "source": "src/index.ts",
  "typings": "index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sghall/kapellmeister.git"
  },
  "keywords": [
    "animation",
    "transition"
  ],
  "author": "Steven Hall",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sghall/kapellmeister/issues"
  },
  "homepage": "https://github.com/sghall/kapellmeister#readme",
  "scripts": {
    "docs": "cd docs && npm install && npm run start",
    "prebuild": "npm run build:cln",
    "build": "npm run build:lib && npm run build:cpy",
    "build:cln": "rimraf build",
    "build:lib": "node ./scripts/build.js",
    "build:cpy": "cross-env BABEL_ENV=cjs babel-node ./scripts/copy-files.js",
    "test": "cross-env BABEL_ENV=test mocha \"src/**/*.spec.js\"",
    "lint": "tslint -p tsconfig.json -c tslint.json \"src/**/*.ts\" -e \"*.spec.ts\"",
    "test:watch": "npm run test -- -w",
    "test:coverage": "cross-env BABEL_ENV=coverage nyc mocha \"src/**/*.spec.js\" && nyc report --reporter=lcov",
    "test:coverage:html": "cross-env BABEL_ENV=coverage nyc mocha \"src/**/*.spec.js\" && nyc report --reporter=html",
    "pretty": "prettier src/**/*.ts --write --no-semi --single-quote --trailing-comma=all --print-width 80",
    "copy": "cp -r build/.  ../react-move/node_modules/kapellmeister/"
  },
  "dependencies": {
    "@types/d3-timer": "^1.0.8",
    "d3-timer": "^1.0.9"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-transform-computed-properties": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/plugin-transform-typescript": "^7.2.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "babel-plugin-istanbul": "^5.1.0",
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "husky": "^1.3.1",
    "jsdom": "^13.1.0",
    "lint-staged": "^8.1.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "prettier": "^1.16.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.1.0",
    "rollup-plugin-babel": "^4.3.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-size-snapshot": "^0.8.0",
    "rollup-plugin-terser": "^4.0.2",
    "rollup-plugin-uglify": "^6.0.1",
    "sinon": "^7.2.2",
    "tslint": "^5.12.1",
    "typescript": "^2.9.1",
    "webpack": "^4.28.4"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "**/*.spec.js"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
